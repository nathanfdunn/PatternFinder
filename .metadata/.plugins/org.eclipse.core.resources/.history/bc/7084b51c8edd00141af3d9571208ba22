	public static boolean isNumeric(String str){
		try{
			Integer.parseInt(str);
		}catch(Exception e){
			return false;
		}
		return true;
	}
	
	public static int parseInt(String str){
		try{
			return Integer.parseInt(str);
		}catch(Exception e){
			e.printStackTrace();
		}
		throw new Error("Not parsable");
	}
	
